<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" type="text/css" href="assets/css/form_login.css">
    </head>
    <body>
        <section class="form">
            <form id='credenciais' action="/" method="post">
                <div class="container">
                    <label for="username">Username</label>
                    <input id="user"type="text" placeholder="Enter Username" name="username" required>
                    <label for="password">Password</label>
                    <input type="password" placeholder="Enter Password" name="password" required>
                    <button type="submit">Login</button>
                </div>
            </form>
        </section>

    </body>
    <footer>
        <script>
            let bearer;

            let form = document.getElementById('credenciais');
            if (typeof form !== 'null') {
                form.onsubmit = function (event) {
                    let xhr = new XMLHttpRequest();
                    let formData = new FormData(form);

                    xhr.open('POST', '{{ path('app_admin_token') }}')
                    xhr.setRequestHeader("Content-Type", "application/json");
                    xhr.send(JSON.stringify(Object.fromEntries(formData)));
                    xhr.onreadystatechange = function () {
                        if (xhr.readyState === XMLHttpRequest.DONE) {

                            if (xhr.status === 200) {
                                window.location.href = "/order"
                            } else {
                                alert("credenciais n√£o conferem");
                                window.location.href = "/";
                                return false;
                            }

                        }
                    }
                }
            }
        </script>
    </footer>
</html>
